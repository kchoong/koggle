h1
  = t("worker.titles.list")
  a< class="text-black" href=new_worker_path
    i class="bi bi-plus-square-fill"

div class="table-responsive"
  table class="table table-striped table-sm"
    thead class="table-dark"
      tr
        th
          a class=(@pager.order_by == "id" ? "fw-bold" : "") href=workers_path(order_by: "id", order_direction: (@pager.order_direction == "asc" ? :desc : :asc))
            = t("id")
          - if @pager.order_by == "id"
            - if @pager.order_direction == "asc"
              i<> class="bi bi-caret-up-fill"
            - else
              i<> class="bi bi-caret-down-fill"
        th
          a class=(@pager.order_by == "last_name" ? "fw-bold" : "") href=workers_path(order_by: "last_name", order_direction: (@pager.order_direction == "asc" ? :desc : :asc))
            = Worker.human_attribute_name :name
          - if @pager.order_by == "last_name"
            - if @pager.order_direction == "asc"
              i<> class="bi bi-caret-up-fill"
            - else
              i<> class="bi bi-caret-down-fill"
        th = Worker.human_attribute_name :email
        th
          a class=(@pager.order_by == "birthday" ? "fw-bold" : "") href=workers_path(order_by: "birthday", order_direction: (@pager.order_direction == "asc" ? :desc : :asc))
            = Worker.human_attribute_name :birthday
          - if @pager.order_by == "birthday"
            - if @pager.order_direction == "asc"
              i<> class="bi bi-caret-up-fill"
            - else
              i<> class="bi bi-caret-down-fill"
        th = Worker.human_attribute_name :full_address
        th = Worker.human_attribute_name :office
        th = t("actions.actions")
    tbody class="table-group-divider"
      - @workers.each do |worker|
        tr
          th = worker.id
          td
            a href=worker_path(worker) = worker.name
          td = worker.user.email
          td
            - if worker.birthday.present?
              = l(worker.birthday, :format => :long)
          td = worker.full_address
          td
            - if worker.office.present?
              a href=office_path(worker.office) = worker.office.name
          td
            button type="button" class="btn btn-primary btn-sm me-2"
              a class="text-white" href=edit_worker_path(worker)
                = t("actions.edit")
                i class="bi bi-pencil-fill ps-2"
            button type="button" class="btn btn-primary btn-sm me-2"
              a class="text-white" href=worker_path(worker) data-method="delete" data-confirm=t("actions.confirm")
                = t("actions.delete")
                i class="bi bi-trash-fill ps-2"

= pagination